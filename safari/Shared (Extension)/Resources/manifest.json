{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://github.com/insin/hn-comments-owl/",
  "version": "1.6",
  "icons": {
    "48": "icon48.png",
    "96": "icon96.png",
    "128": "icon128.png",
    "256": "icon256.png",
    "512": "icon512.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://news.ycombinator.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "options_ui": {
    "browser_style": true,
    "page": "options.html"
  },
  "action": {
    "default_title": "__MSG_extensionName__",
    "default_popup": "browser_action.html",
    "default_icon": {
      "16": "toolbar-icon16.png",
      "19": "toolbar-icon19.png",
      "32": "toolbar-icon32.png",
      "38": "toolbar-icon38.png",
      "48": "toolbar-icon48.png",
      "72": "toolbar-icon72.png"
    }
  },
  "permissions": [
    "contextMenus",
    "storage"
  ]
}
